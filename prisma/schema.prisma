// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

//Initialize local DB w/ SQLite
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

//Define scheduling process fields
model vacTimer {
  id      String   @id @default(uuid())
  name    User     @relation(fields: [userId], references: [id])
  vacDate DateTime
  vacHour String
  userId  String
}

//Define user fields
model User {
  id          String     @id @default(uuid())
  name        String
  birthDate   DateTime
  isFinalized Boolean    @default(false)
  vacTimer    vacTimer[]
}
